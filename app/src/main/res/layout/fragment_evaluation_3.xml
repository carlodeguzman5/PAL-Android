<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.evaluation.pal.palcrewevaluation.MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grooming"
        android:id="@+id/evaluationPage3Label"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:paddingBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/evaluationPage3Label"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hairLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton1"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Skin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup1"
                android:id="@+id/competencyCardLabel" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton3"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton4"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Uniform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/uniformLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup2" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton5"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton6"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Baggage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/baggageLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup3" />

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton7"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton8"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Hosiery / Socks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/socksLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup4" />

            <RadioGroup
                android:id="@+id/radioGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton9"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton10"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton11"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton12"
                    android:height="30dp" />
            </RadioGroup>

            <TextView
                android:text="Jewellery / Wristwatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jewelLabel"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/radioGroup5" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Nails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nailsLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup6" />

            <RadioGroup
                android:id="@+id/radioGroup6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton13"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton14"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Personal Hygiene"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hygieneLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup7" />

            <RadioGroup
                android:id="@+id/radioGroup7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton15"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton16"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weightLabel"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:height="30dp"
                android:layout_toStartOf="@+id/radioGroup8" />

            <RadioGroup
                android:id="@+id/radioGroup8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <RadioButton
                    android:text="O"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton17"
                    android:layout_weight="1"
                    android:height="30dp"/>

                <RadioButton
                    android:text="B"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton18"
                    android:height="30dp" />
            </RadioGroup>

        </RelativeLayout>

        <TextView
            android:text="Remarks:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/remarks2Text"
            android:layout_weight="0.24" />

    </LinearLayout>



</RelativeLayout>
